<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_attend"
        style="@style/MainItem"
        android:background="@color/apricot">

        <ImageView
            style="@style/MainIcon"
            android:src="@drawable/icon_attend" />

        <com.geekwims.hereiam.widget.FontText
            style="@style/MainItemText"
            android:text="@string/attendance" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_schedule"
        style="@style/MainItem"
        android:background="#F67280">

        <ImageView
            style="@style/MainIcon"
            android:src="@drawable/icon_timetable" />

        <com.geekwims.hereiam.widget.FontText
            style="@style/MainItemText"
            android:text="@string/timetable" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_history"
        style="@style/MainItem"
        android:background="#C06C84">

        <ImageView
            style="@style/MainIcon"
            android:src="@drawable/icon_search" />

        <com.geekwims.hereiam.widget.FontText
            style="@style/MainItemText"
            android:text="@string/browse_attendance" />
    </LinearLayout>


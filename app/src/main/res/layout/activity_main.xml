    <LinearLayout
        android:id="@+id/btn_board_start"
        style="@style/MainItem"
        android:background="#355C7D">

        <ImageView
            style="@style/MainIcon"
            android:src="@drawable/icon_question" />

        <com.geekwims.hereiam.widget.FontText
            style="@style/MainItemText"
            android:text="@string/notice" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_setting_start"
        style="@style/MainItem"
        android:background="#373B3C"
        android:clickable="true">

        <ImageView
            style="@style/MainIcon"
            android:src="@drawable/icon_setting" />

        <com.geekwims.hereiam.widget.FontText
            style="@style/MainItemText"
            android:text="@string/setting" />
    </LinearLayout>
